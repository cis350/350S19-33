        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="296dp"
        android:layout_height="71dp"
        android:layout_marginStart="61dp"
