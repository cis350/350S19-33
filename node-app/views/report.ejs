  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
  font-size: 17px;
}

.topnav a:hover {
  background-color: #ddd;
  color: black;
}

.topnav a.active {
  background-color: #868686;
  color: white;
}
</style>
</head>
<body>

<div class="topnav">
  <a class="active" href="/logout">Log out</a>
  <a href="/status">Vacation statuses</a>
  <a href="/reports">Reports</a>
  <a href="/events">Events</a>
  <a href="/dashboard">Dashboard</a>
  <a href="/students">Search for students</a>
</div>

</body>
  <body>
  	<h1><%= report.subject %> </h1>
  	<p> Student Username: <%= report.studentUsername %> </p>
  	<p> Student Name: <%= report.studentName %> </p>
  	<p> Date Report Submitted: <%= report.date %> </p>
  	<p> Description: <%= report.reportDescription %> </p>
    <p> <a href='/editMemo?id=<%=report.id%>'> Create Memo </a> </p>
    <p> <a href='/showMemos?id=<%=report.id%>'> Show Report Memos </a> </p>
    <form action="/addComment?id=<%=report.id%>&role=admin" method="post" >
    <p>Add a comment or a question!<p>
    <input type="text" name="comment" placeholder="Comment" style="width: 300px class="form-control" >
    <input type="submit" value="Add" class="btn">
        <p><b>COMMENTS BELOW:</b> <p>
    <% comments.forEach((comment) => { %>
        <% if (report.id == comment.reportId) { %>
                <% if (comment.role == "admin") { %>
                                  <p> <%= "Admin " + comment.adminCommenting + " says " + comment.content %><p>
                                    <% } else { %>
                                    <%= "Student " + comment.studentCommenting + " says " + comment.content %>
                                                                        <% } } %>
                                       <% }) %>
    </form>
  </body>
  </html>